<div class="col-sm-12 container center" id="studentSelection">
	<div class="row">
	<h2> Please select your name from the list below. If you have not registered yet, new students 
	can be added using the 'Account' tab above.</h2>
		<div class="dropdown">
			<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Student List
			<span class="caret"></span>
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
				{{#each students}}
					<li class="students" data-poo="{{this.id}}"><a href="#">{{this.name}}</a></li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>
